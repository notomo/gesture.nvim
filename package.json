{
    "private": true,
    "name": "gesture.nvim",
    "version": "0.0.14",
    "description": "A mouse gesture plugin for neovim",
    "main": "lib/index.js",
    "dependencies": {
        "log4js": "^6.1.0",
        "neovim": "^4.6.0-alpha.0",
        "tslib": "^1.10.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.25",
        "@types/node": "^13.1.1",
        "jest": "^24.9.0",
        "ts-jest": "^24.2.0",
        "typescript": "^3.7.4"
    },
    "scripts": {
        "test": "jest --coverage",
        "build": "tsc -p tsconfig.json && node ./version.js > ./lib/version.json",
        "watch": "tsc -p tsconfig.json --watch true",
        "setup": "node ./setup.js"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*\\.test\\.ts"
        ],
        "verbose": true,
        "collectCoverageFrom": [
            "**/src/**/*.ts",
            "!**/src/**/*.test.ts"
        ],
        "coverageDirectory": "./coverage/"
    }
}
